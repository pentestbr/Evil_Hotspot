<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bckground1"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/serverStatusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:textSize="22dp" />

    <Button
        android:id="@+id/hsButton"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/button_off"/>

    <Button
        android:id="@+id/rtButton"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/hsButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roottest"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:id="@+id/iptablesButton"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/rtButton"
        android:layout_centerHorizontal="true"
        android:background="@drawable/injectrule"/>
    <Button
        android:id="@+id/htmlbutton"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:text="Html test"
        android:layout_below="@+id/iptablesButton"
        android:layout_alignLeft="@+id/hsButton"
        android:layout_alignStart="@+id/hsButton"
        android:layout_alignRight="@+id/hsButton"
        android:layout_alignEnd="@+id/hsButton"
        android:visibility="gone"/>



</RelativeLayout>
